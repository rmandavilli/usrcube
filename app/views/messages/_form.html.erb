<%= form_for(@message, html:{class:'form-horizontal'}) do |f| %>
  <% if @message.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@message.errors.count, "error") %> prohibited this message from being saved:</h2>

      <ul>
      <% @message.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <form class="form-horizontal" role="form">

    <div class="form-group">
      <%= f.label :first_name, 'First Name', class: "col-sm-2 control-label" %>
      <%= f.text_field :first_name, size:30, placeholder: "Your First Name" %>
    </div>

    <div class="form-group">
      <%= f.label :last_name, 'Last Name', class: "col-sm-2 control-label" %>
      <%= f.text_field :last_name, size:30, placeholder: "Your Last Name" %>
    </div>

    <div class="form-group">
      <%= f.label :email, class: "col-sm-2 control-label" %>
      <%= f.text_field :email, size:30, placeholder: "Your email" %>
    </div>

    <div class="form-group">
      <%= f.label :content, class: "col-sm-2 control-label" %>
      <%= f.text_area :content, size: "32x10", placeholder: "Enter your message" %>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit 'Send Message' %>
      </div>
    </div>
    
  </form>

<% end %>
