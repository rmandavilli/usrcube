<header>
  <div class="navbar-wrapper">
    <div class="container">

      <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">

          <div class="navbar-header">
            <!-- button menu when window is made smaller -->
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>

            <!-- Symbol/logo on left side of navbar -->
            <%= link_to "USRcube", root_path, id: "logo", class: "navbar-brand" %>
          </div>        <!-- end div navbar-header -->

          <!-- Navbar menu on right -->
          <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav pull-right">

              <!-- Home menu on navbar -->
              <li><%= link_to (raw("<span class='glyphicon glyphicon-home'></span>"+" Home")), root_path, class: "active" %></li>

              <!-- Apps menu with dropdown on navbar -->
              <li class="dropdown">
                <%= link_to apps_path, :class => "dropdown-toggle", :data => {:toggle => "dropdown"} do %>
                  Apps <b class='caret'></b>
                <% end %>
                <ul class="dropdown-menu">
                  <li><%= link_to "All Apps", apps_path %></li>
                  <li class="divider"></li>
                  <li><%= link_to "Loan4House", apps_houseLoan_path %></li>
                  <li><%= link_to "BuyOrRent?", apps_houseBuyRent_path %></li>
                  <li><%= link_to "PrepayLoan", apps_loanPrepay_path %></li>
                  <li><%= link_to "PaydayLoanInterest", apps_aprPaydayLoan_path %></li>
                  <li><%= link_to "FlipHouse", apps_path %></li>
                </ul>
              </li>

              <!-- Support menu on navbar -->
              <li><%= link_to "Support", support_path %></li>

            </ul>
          </div>      <!-- end div navbar-collapse collapse -->

        </div>        <!-- end div 2nd container -->
      </div>          <!-- end div navbar navbar-fixed-top navbar-inverse -->

    </div>            <!-- end div first container -->
  </div>              <!-- end div navbar-wrapper -->
</header>
